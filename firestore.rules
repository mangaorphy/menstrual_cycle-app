rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own cycles
    match /users/{userId}/cycles/{cycleId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own daily logs
    match /users/{userId}/daily_logs/{logId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to create their user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary rule for testing - remove in production
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}
